production:
  adapter: postgresql
  database: <%= node['discourse']['dbname'] %>
  username: <%= node['discourse']['dbuser'] %>
  password: <%= node['discourse']['dbpass'] %>
  # host: dbhost		# if not localhost
  pool: 5 	# size of DB connection pool *per process*
  timeout: 5000
  # db_id: 0	# database ID if hosting multiple sites
  host_names:
    # /!\ Make sure you *also* restart sidekiq if you change this setting /!\
    - <%= node['fqdn'] %> # Update this to be the domain of your production site

test:
  adapter: postgresql
  database: <%= node['discourse']['dbname_test'] %>
  username: <%= node['discourse']['dbuser'] %>
  password: <%= node['discourse']['dbpass'] %>
  min_messages: warning
  host: localhost
  pool: 5
  timeout: 5000
  host_names:
    - localhost
